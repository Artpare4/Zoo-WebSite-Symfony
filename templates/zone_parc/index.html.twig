{% extends 'base.html.twig' %}

{% block title %}Zones Parc{% endblock %}

{% block body %}
<div class="flex flex-col ">
    <h1 class="text-center text-4xl">Les zones du parc</h1>
    <div class="flex flex-row flex-wrap justify-center ">
    {% for zone in zones_Parc %}
        <div class="flex flex-col content-center m-3 pt-2 pl-2 pr-2 bg-background-800/40 backdrop-filter backdrop-blur-sm border border-secondary-50 border-s">
            <div class="bg-secondary-800/60 p-2 rounded"> <img src="{{ asset('images/zone_illustration.jpg') }}" class="w-[100] rounded"></div>
            <p class="text-center m-2 text-2xl">{{ zone.libZone }}</p>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
