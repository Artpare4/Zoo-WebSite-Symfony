{% extends 'base.html.twig' %}

{% block title %}{{ zone.libZone }}{% endblock %}

{% block body %}
    <div class="flex flex-col grow">

        <div>
            <div class="flex flex-col w-1/2 bg-secondary-800 m-3">
                <h1 class="text-center text-4xl">{{ zone.libZone }}</h1>
                <div class="flex justify-center">
                    <img class="w-[100%]" src="{{ asset('images/zone_illustration.jpg') }}">
                </div>
            </div>
        </div>




        <h1 class="text-center text-3xl">Les Animaux que vous pouvez voir:</h1>
        <div class="flex flex-row justify-center flex-wrap">

        {% for animal in animals %}
            <div class="flex flex-col  w-1/3 m-3 ">
                <div class="bg-primary-500 p-2 rounded-2xl"><img class="w-[100%] rounded-2xl  " src="{{ asset('images/cerf.jpg') }}"></div>
                <div>
                    <p class="text-center">{{ animal.nomFamilleAnimal }}</p>
                    <p class="text-center italic">{{ animal.nomScientifique }}</p>
                </div>
            </div>
        {%endfor%}
        </div>
    </div>


{% endblock %}
