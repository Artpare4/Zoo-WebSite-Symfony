{% extends 'base.html.twig' %}

{% block title %}{{ zone.libZone }}{% endblock %}

{% block body %}
    <div class="flex flex-col">
        <h1 class="text-center text-4xl">{{ zone.libZone }}</h1>
        {% for animal in animals %}
            <div class="flex flex-row">
                <div><img src="{{ asset('images/cerf.jpg') }}"></div>
                <div>
                    <p>{{ animal.nomFamilleAnimal }}</p>
                    <p>{{ animal.nomScientifique }}</p>
                </div>
            </div>
        {%endfor%}
    </div>


{% endblock %}
