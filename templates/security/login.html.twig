{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="flex justify-center min-h-full w-[90%] lg:w-[50%] mt-36 lg:mt-24 mb-24 mx-auto ">
    <div style="background: linear-gradient(rgba(255,255,255,.4), rgba(255,255,255,.4)), url({{ asset('images/lion.png') }})" class="w-full p-12 rounded-3xl lg:rounded-2xl" >
        <h1 class="text-center text-text-950 text-8xl lg:text-6xl mb-5">Connexion</h1>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div>
                    <div class="flex-col mb-3" >
                        <div class="bg-secondary-800/60 backdrop-filter backdrop-blur-sm border border-secondary-50 border-s text-cl md:text-2xl">Vous êtes connecté(e) {{ app.user.pnomUser }}</div>
                        <div class=" flex justify-center mt-4">
                        <button class="btn bg-secondary-800/60 backdrop-filter backdrop-blur-sm border border-secondary-50 border-s font-bold py-2 px-4 border border-s border-primary-50 rounded">
                            <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </button>
                        </div>
                    </div>
                </div>
            {% else %}

            <div class="flex flex-col">
                <label class="text-text-950 text-cl md:text-2xl required">Email</label>
                <div class="text-text-950"></div>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="text-lg text-secondary-50 p-3 bg-secondary-800/60 backdrop-filter backdrop-blur-sm border border-secondary-50 border-s rounded-2xl" autocomplete="email" required autofocus>

            </div>

            <div class="flex flex-col mt-4">
                <label class="text-text-950 text-cl md:text-2xl required">Mot de passe</label>
                <div class="text-text-950"></div>
                <input type="password" name="password" id="inputPassword" class="text-lg text-secondary-50 p-3  bg-secondary-800/60 backdrop-filter backdrop-blur-sm border border-secondary-50 border-s rounded-2xl" autocomplete="current-password" required>

            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="flex justify-center mt-4">
                <button type="submit" class="btn bg-primary-500/70 col-start-2 col-end-4 text-4xl lg:text-2xl rounded-xl p-2 border border-primary-50 border-s">Connexion</button>
            </div>
            {% endif %}
        </form>
        <div class="mt-3 flex justify-center">
            <a class="text-text-50 bg-secondary-800/60 backdrop-filter backdrop-blur-sm border border-secondary-50 border-s p-2 rounded-2xl text-xl" href="{{ path('app_register') }}">Créez votre compte ! </a>
        </div>
    </div>
</div>
{% endblock %}
