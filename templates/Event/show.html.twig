{% extends 'base.html.twig' %}

{% block title %}{{event.nomEvent}}{% endblock %}

{% block body %}
<div class="flex flex-col">
    <h1 class="text-center text-3xl md:text-5xl  lg:text-6xl mt-4 lg:mt-7 lg:mb-5 lg:text-10xl text-secondary-800">{{event.nomEvent}}</h1>
    <div class="flex flex-col  justify-center">
        <div class="lg:flex lg:flex-row">
            <div class="flex justify-center p-4" >
                <img class="max-w-lg rounded-2xl" src="{{ asset("images/soigneur.jpg") }}">
            </div>
            <div class="m-4 lg:w-1/2 flex content-center">
                <p class="text-secondary-800 text-lg">{{event.description}}</p>
            </div>
        </div>
    </div>
    <div class="xl:flex xl:justify-center">
        <div class="xl:flex xl:flex-row xl:w-1/2">
            <div class="flex flex-col xl:m-10">
                <h2 class="text-3xl text-secondary-800">Informations compl√©mentaires:</h2>
                <p class="text-secondary-800 text-lg mt-3">Nombre de places : {{event.nbPlaces}} personnes</p>
            </div>
            <div class="flex flex-col mt-10 xl:m-10">
                <h2 class="text-3xl text-secondary-800 ">Les dates prochaines: </h2>
                {% for date in event.datesEvent %}
                <div class="flex flex-row m-4 bg-background-800/40 p-3 w-fit rounded-2xl">
                    <p class="text-center mr-4">{{ date.dateEvent.dateEvent|date("d/m/Y") }}</p>
                    <p>{{ date.horaire }}h</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}