{% extends 'base.html.twig' %}

{% block title %}{{event.nomEvent}}{% endblock %}

{% block body %}
<div class="flex flex-col">
    <div class="flex justify-center">
        <h1 class="text-center">{{event.nomEvent}}</h1>
        <img src="{{ asset("images/soigneur.jpg") }}">
    </div>
    <div>
        <p>Nombre de places : {{event.nbPlaces}}</p>
        <p>Description : {{event.description}}</p>
    </div>
    <div class="flex flex-col">
        <h2>Les dates prochaines: </h2>
        {% for date in event.datesEvent %}
        <div class="flex flex-row">
            <p>{{ date.dateEvent.dateEvent|date("d/m/Y") }}</p>
            <p>{{ date.horaire }}h</p>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}