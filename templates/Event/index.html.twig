{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
    <h1 class="text-center text-4xl mt-4 grow">Liste des évenements</h1>
    <div class="flex flex-col ">
    {% for event in events %}
        <div class="flex flex-row m-2 bg-secondary-800/40 rounded-2xl ">
            <img class="w-1/4 rounded-2xl p-2" src="{{ asset("images/soigneur.jpg") }}">
            <div class="flex flex-col justify-center">
                <p class="text-primary-50 text-6sm md:text-2xl text-center ">{{ event.nomEvent }} </p>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
