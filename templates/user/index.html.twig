{% extends 'base.html.twig' %}

{% block body %}
    {% set user = app.user %}

<div class="main ">
    <h1 class="text-center text-8xl lg:text-6xl mt-36 lg:mt-24 mb-5 text-secondary-800">Bonjour {{ user.nomUser }}</h1>

    <div class="info flex-col">
        <article>Nom : {{ user.nomUser }}</article>
        <article>Prenom : {{ user.pnomUser }}</article>
        <article>Email : {{ user.email }}</article>
        <article>Numéro de téléphone : {{ user.phoneUser }}</article>
    </div>

</div>
{% endblock %}
